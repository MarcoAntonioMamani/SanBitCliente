<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/id_cardview_cliente"
    android:layout_width="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:background="@color/marfil"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:elevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    >

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:paddingRight="2dp"
    >

    <ImageView
        android:id="@+id/row_cliente_img"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/row_cliente_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="2dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/row_cliente_img"
        android:maxLength="65"
        android:maxLines="2"
        style="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold"
        android:textColor="@color/primary_text"

        android:text="Marco Antonio Mamani" />

    <TextView
        android:id="@+id/row_cliente_direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_cliente_name"
        android:layout_toEndOf="@+id/row_cliente_img"
        android:text="Barrio las americas"
        android:textColor="@color/colorText"
        android:maxLines="2"
        android:maxEms="2"
        android:paddingBottom="5dp"
       style="@style/TextAppearance.AppCompat.Caption" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@id/row_cliente_direccion"
        android:layout_toRightOf="@id/row_cliente_img"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:layout_weight="1"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="8dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                    android:background="@drawable/animation_bottoncancel"
                    android:id="@+id/listcliente_ubicacion"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_map"
                        android:paddingLeft="5dp"
                        android:outlineSpotShadowColor="@color/colorPrimary"
                        android:outlineAmbientShadowColor="@color/colorPrimary"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UbicaciÃ³n"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center"
                        android:gravity="center"
                        style="@style/StyleContent"
                        android:textStyle="bold"
                        android:paddingLeft="3dp"
                        android:textSize="10dp"
                        />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:layout_weight="1"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="8dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/animation_bottoncancel"
                        android:id="@+id/listcliente_llamar"

                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/cell_phone"
                            android:paddingLeft="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Llamar"
                            android:textColor="@color/colorPrimary"
                            android:layout_gravity="center"
                            android:gravity="center"
                            style="@style/StyleContent"
                            android:textStyle="bold"
                            android:textSize="10dp"
                            android:paddingLeft="3dp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:layout_weight="1"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="8dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/animation_riple_edit"
                        android:id="@+id/listcliente_wp"

                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_whatsapp"
                            android:paddingLeft="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chatear"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            style="@style/StyleContent"
                            android:textStyle="bold"
                            android:textSize="10dp"
                            android:paddingLeft="3dp"
                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/row_cliente_img"
     android:visibility="gone"
        android:background="@color/colorAccent"></View>
</RelativeLayout>

</android.support.v7.widget.CardView>