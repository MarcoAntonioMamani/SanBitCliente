<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ListadoVentas.ListadoVentasFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/Pedidos_CardList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:background="@color/colorSplashText"

            />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:background="@color/azulclaro"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/keyline_1_minus_8dp"
            android:layout_marginTop="@dimen/keyline_1_minus_8dp"
            android:layout_marginRight="@dimen/keyline_1_minus_8dp"
            android:layout_marginBottom="@dimen/keyline_1_minus_8dp"
            app:contentPaddingBottom="@dimen/keyline_1_minus_8dp"
            android:layout_alignParentBottom="true"
            app:contentPaddingTop="@dimen/keyline_1_minus_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="left"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:paddingLeft="5dp"
                                android:text="Desde: "
                                style="@style/StyleTitle"
                                android:textColor="@color/primary_text"
                                android:textSize="12dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_gravity="left"
                                android:gravity="left"
                                android:paddingLeft="2dp"

                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/id_tvfecha_desde"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/animation_bottoncancel"
                                    android:ems="8"
                                    android:gravity="center"
                                    android:textColor="@color/primary_text"
                                    android:paddingLeft="@dimen/keyline_1_minus_8dp"
                                    android:textSize="10dp"
                                    android:inputType="date" />


                                <ImageButton
                                    android:id="@+id/ib_btn_desde"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:background="@color/white"
                                    android:paddingLeft="3dp"
                                    android:src="@drawable/ic_calendario"
                                    tools:ignore="ContentDescription" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:paddingLeft="5dp"
                                android:text="Hasta:  "
                                style="@style/StyleTitle"
                                android:textColor="@color/primary_text"
                                android:textSize="12dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_gravity="right"
                                android:gravity="right"
                                android:paddingLeft="2dp"
                                android:paddingRight="3dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/id_tvfecha_hasta"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/animation_bottoncancel"
                                    android:ems="8"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/keyline_1_minus_8dp"
                                    android:textSize="10dp"
                                    android:textColor="@color/primary_text"
                                    android:inputType="date" />


                                <ImageButton
                                    android:id="@+id/id_btn_hasta"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:background="@color/white"
                                    android:paddingLeft="8dp"
                                    android:src="@drawable/ic_calendario"
                                    tools:ignore="ContentDescription" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="10dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:gravity="left"
                                    android:paddingLeft="5dp"
                                    android:text="Contado:  "
                                    style="@style/StyleTitle"
                                    android:textColor="@color/primary_text"
                                    android:textSize="12dp" />
                                <TextView
                                    android:id="@+id/list_venta_contado"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:gravity="left"
                                    android:paddingLeft="5dp"
                                    android:text="24000 Bs"
                                    style="@style/StyleTitle"
                                    android:textStyle="normal"
                                    android:textColor="@color/primary_text"
                                    android:textSize="12dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:gravity="left"
                                    android:paddingLeft="5dp"
                                    android:text="Credito:  "
                                    style="@style/StyleTitle"
                                    android:textColor="@color/primary_text"
                                    android:textSize="12dp" />
                                <TextView
                                    android:id="@+id/list_venta_credito"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:gravity="left"
                                    android:paddingLeft="5dp"
                                    android:text="24000 Bs"
                                    style="@style/StyleTitle"
                                    android:textStyle="normal"
                                    android:textColor="@color/primary_text"
                                    android:textSize="12dp" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="10dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:gravity="left"
                                    android:paddingLeft="5dp"
                                    android:text="Total :  "
                                    style="@style/StyleTitle"
                                    android:textColor="@color/primary_text"
                                    android:textSize="12dp" />
                                <TextView
                                    android:id="@+id/list_venta_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:gravity="left"
                                    android:paddingLeft="5dp"
                                    android:text="24000 Bs"
                                    style="@style/StyleTitle"
                                    android:textStyle="normal"
                                    android:textColor="@color/primary_text"
                                    android:textSize="12dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:gravity="left"
                                    android:paddingLeft="5dp"
                                    android:text="Utilidad:  "
                                    style="@style/StyleTitle"
                                    android:textColor="@color/primary_text"
                                    android:textSize="12dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/list_venta_utilidad"
                                    android:layout_gravity="left"
                                    android:gravity="left"
                                    android:paddingLeft="5dp"
                                    android:text="24000 Bs"
                                    style="@style/StyleTitle"
                                    android:textStyle="normal"
                                    android:textColor="@color/primary_text"
                                    android:textSize="12dp" />

                            </LinearLayout>
                        </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingTop="10dp"
                                android:paddingRight="5dp"
                                >
                                <Button
                                    android:id="@+id/id_btn_buscar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"


                                    android:background="@drawable/animation_riple_button"
                                    android:text="Consultar"
                                    android:textSize="12dp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_below="@+id/id_btn_buscar"
                                    android:paddingRight="10dp"
                                    android:text="Cantidad: 0"
                                    android:id="@+id/list_tvcantidad"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    style="@style/TextAppearance.AppCompat.Small"
                                    android:textColor="@color/colorAccent" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


    </LinearLayout>

</FrameLayout>